package Entities;
import javax.persistence.*;

import java.io.Serializable;
import java.util.Date;
 
@Embeddable
class Fact_tablePK implements Serializable{
	  @Column(name = "year", nullable = false)
	  private int year;
	  @Column(name = "pokaz", nullable = false)
	  private Pokazateli pokaz;
	  @Column(name = "data_type", nullable = false)
	  private Data_type data_type;
		public long getYear() {
			return year;
		}
		public void setYear(int year) {
			this.year = year;
		}
		public Pokazateli getPokaz() {
			return pokaz;
		}
		public void setPokaz(Pokazateli pokaz) {
			this.pokaz = pokaz;
		}
		public Data_type getData_type() {
			return data_type;
		}
		public void setData_type(Data_type data_type) {
			this.data_type = data_type;
		}
}



@Entity
@IdClass(Fact_tablePK.class)
@Table(name = "pokazateli")
@NamedQuery(name = "Fact_table.getAll", query = "SELECT c from Fact_table c")
public class Fact_table {
	@Id
	@AttributeOverrides({
	     @AttributeOverride(name = "year", column = @Column(name="year")),
	     @AttributeOverride(name = "pokaz", column = @Column(name="pokaz")),
	     @AttributeOverride(name = "data_type", column = @Column(name="data_type"))
	  })
	  private int year;
	  @ManyToOne(fetch = FetchType.LAZY, optional = false)
	  @JoinColumn(name = "pokaz")
	  private Pokazateli pokaz;
	  @ManyToOne(fetch = FetchType.LAZY, optional = false)
	  @JoinColumn(name = "data_type")
	  private Data_type data_type;
	  @Column(name = "value")
	  private double value;
 
    public Fact_table(int year,Pokazateli pokaz, Data_type data,double value) {
        this.year = year;
        this.pokaz = pokaz;
        this.data_type = data;
        this.value = value;
    }
 
    public Fact_table() {
    }

}