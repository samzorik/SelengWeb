package Entities;
import javax.persistence.*;

import java.io.Serializable;
import java.util.Date;
 
@Embeddable
class Fact_tablePK implements Serializable{
	  @Column(name = "year", nullable = false)
	  private long year;
	  @Column(name = "pokaz", nullable = false)
	  private Pokazateli pokaz;
	  @Column(name = "data_type", nullable = false)
	  private Data_type data_type;
		public long getYear() {
			return year;
		}
		public void setYear(long year) {
			this.year = year;
		}
		public Pokazateli getPokaz() {
			return pokaz;
		}
		public void setPokaz(Pokazateli pokaz) {
			this.pokaz = pokaz;
		}
		public Data_type getData_type() {
			return data_type;
		}
		public void setData_type(Data_type data_type) {
			this.data_type = data_type;
		}
}



@Entity
@Table(name = "pokazateli")
@NamedQuery(name = "Fact_table.getAll", query = "SELECT c from Fact_table c")
public class Fact_table {
 
    @Id
    @GeneratedValue(strategy = GenerationType.AUTO)
    private long id;
 
    @Column(name = "name")
    private String name;
    
    @ManyToOne
    @JoinColumn
    private Group_pokaz gp;
    
    @ManyToOne
    @JoinColumn
    private Measurement_units mu;
 
    public Fact_table(String name,Group_pokaz gp, Measurement_units mu) {
        this.name = name;
        this.gp = gp;
        this.mu = mu;
    }
 
    public Fact_table() {
    }

	public long getId() {
		return id;
	}

	public void setId(long id) {
		this.id = id;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}
	@Override
    public String toString() {
		return id+" "+name;
	}

	public Group_pokaz getGp() {
		return gp;
	}

	public void setGp(Group_pokaz gp) {
		this.gp = gp;
	}

	public Measurement_units getMu() {
		return mu;
	}

	public void setMu(Measurement_units mu) {
		this.mu = mu;
	}
}